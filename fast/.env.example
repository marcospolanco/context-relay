# Context Relay API Configuration
# Copy this file to .env and customize as needed

# API Settings
API_TITLE=Context Relay API
API_DESCRIPTION=Context Relay System Mock API for Frontend Development
API_VERSION=0.1.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Mock Data Configuration
ENABLE_MOCK_DATA=true
MOCK_DATA_SEED=

# Event Streaming Configuration
SSE_PING_INTERVAL=30
SSE_TIMEOUT=300
EVENT_HISTORY_SIZE=1000
EVENT_THROTTLE_THRESHOLD=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Frontend Integration
GENERATE_TYPESCRIPT_TYPES=true
TYPESCRIPT_OUTPUT_FILE=frontend-types.ts

# Testing Configuration
TEST_MODE=false
BDD_TEST_DATA_DIR=tests/fixtures

# MongoDB Configuration (Phase 2 - Optional)
# If not provided, the application will use in-memory storage (Phase 1)
MONGODB_URI=your_mongodb_uri_here
MONGODB_DB_NAME=context_relay

# External API Keys (Phase 2 - Optional for production)
# Voyage AI for embedding generation (required for semantic similarity)
VOYAGE_API_KEY=your_voyage_api_key_here

# OpenAI (optional - for future features)
# OPENAI_API_KEY=your_openai_api_key_here